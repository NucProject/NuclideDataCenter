<div class="span12" file="tab1.phtml" widget-class="DeviceTabPane" widget-id="weather-tab-pane">
	<div class="portlet box blue tabbable">
		<div class="portlet-title">
			<div class="caption"><i class="icon-reorder">&nbsp;气象站</i></div>
		</div>
		<div class="portlet-body" widget-class="WeatherDevice" widget-id="weather-device">
			<div class="tabbable portlet-tabs">
				<ul class="nav nav-tabs">
                    <li><a href="#weather_history" data-toggle="tab" class="history">获取率</a></li>
                    <li><a href="#weather_config" data-toggle="tab">设置</a></li>
                    <li class="'dropdown">
                        <a id="weather_alert_a" href="#weather_alert" data-toggle="tab" class="dropdown-toggle alerts" style="margin-top:6px;padding-top:8px;padding-bottom:8px">
                            <!-- <i class="icon-warning-sign"></i> -->
                            <span>报警&nbsp;</span>
                            <span class="badge" style="position: relative;top:0px;right:5px;-webkit-border-radius: 12px !important;background: red">0</span>
                        </a>
                    </li>
                    <li><a href="#weather_chart" class="charts" data-toggle="tab">曲线</a></li>
                    <li class="active"><a href="#weather_data" data-toggle="tab">数据</a></li>
				</ul>
				<div class="tab-content">

                    <div class="tab-pane active" id="weather_data">
                        <div class="interval">
                            <a class="btn red s30">30秒</a><a class="btn m5">5分钟</a><a class="btn h1">1小时</a>
                        </div>
                        <div class="data-pane">
                        </div>
                    </div>

					<div class="tab-pane" id="weather_chart">
                        <div>
                            <div class="chart-interval">
                                <select class="chart-field" style="margin-top: 10px">
                                    <option value="Temperature" max="55" min="-20">温度</option>
                                    <option value="Pressure" max="1200" min="900">气压</option>
                                    <option value="Windspeed" max="100" min="0" >风速</option>

                                </select>

                                <a class="btn  s30">30秒</a><a class="btn red m5">5分钟</a><a class="btn h1">1小时</a>
                            </div>
                        </div>
                        <div class="charts">

                        </div>
                        <div class="charts-bar" style="height: 80px">
                        </div>
					</div>
                    <div class="tab-pane config" id="weather_config">

                    </div>
                    <div class="tab-pane" id="weather_alert">
                        <div class="alert-pane">

                        </div>
                    </div>

                    <div class="tab-pane" id="weather_history">
                        <div class="calendar-container" class="fc-ltr fc">
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</div>
</div>
